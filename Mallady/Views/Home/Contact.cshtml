@using Mallady.Database;
@model Person

@{
    ViewData["Title"] = "Contact";
}

@section style{
     <link rel = "stylesheet" href = "~/css/Contact.css" />
}


<div class="container">
    <div class="row">
        <h1>contact us</h1>
    </div>
    <div class="row">
        <h4 style="text-align:center">Stuur hier je vraag in!</h4>
    </div>

    <form method="post" class="row input-container">
        <div class="col-xs-12">
            <div class="styled-input wide">
                <input placeholder="Voornaam" type="text" name="Voornaam" />
                 @Html.ValidationMessageFor(m => m.Voornaam)
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="styled-input">
                <input placeholder="Achternaam" type="text" name="Achternaam" />
                @Html.ValidationMessageFor(m => m.Achternaam)
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="styled-input" style="float:right;">
                <input placeholder="Email" type="text" name="Email" />
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>


        <div class="col-xs-12">
            <div class="styled-input wide">
                <input placeholder="Bericht" type="text" name="Bericht" />
                 @Html.ValidationMessageFor(m => m.Bericht)
            </div>
        </div>

        <div class="col-xs-12">
            <input class="btn-lrg submit-btn" type="submit" value="verstuur" />
        </div>
    </form>
</div>


@if (Model != null)
{
  <a href="/Succes"></a>
  <p>Hallo en welkom @Model.Voornaam @Model.Achternaam </p>
}