@using Mallady.Database;
@model List<Restaurant>



@section style {
    <link id = "mystylesheet" rel = "stylesheet" href = "~/css/Vestigingen.css" />
}


<div class = "tekst22"> 
    <h1>Vestigingen</h1>
    <p>Kom gezellig langs in één van onze vestigingen!</p>
</div>



<div class = "container">
        @foreach (Restaurant r in Model)
        {
            <div class = "restauranttekst" >
               <h2>@r.Locatie</h2>
                <p>@r.Adres</p>
            </div>
        }
</div>

<div class = "reserveerknop">
        <a href="/Reserveren"><p>Reserveren</p></a>
</div>   

<div class = "dagnacht">
       <button class="btn btn-light" onclick="swapStyle('Vestigingen.css')">Light Mode</button>
	   <button class="btn btn-dark" onclick="swapStyle('DonkerVestigingen.css')">Dark Mode</button>
   </div>


<script type="text/javascript">

        function swapStyle(sheet){
            document.getElementById('mystylesheet').href = sheet
        }

</script>