@{
    ViewData["Title"] = "Inloggen";
}

@section style {
    <link id = "mystylesheet" rel = "stylesheet" href = "~/css/Login.css" />
}

<div class = "box">
       <button class="btn btn-light" onclick="swapStyle('/css/Login.css')">Dagmodus</button>
	   <button class="btn btn-dark" onclick="swapStyle('/css/DonkerLogin.css')">Nachtmodus</button>
</div>

<div class = "Tekst"> 

    <h1>Log hier in op uw Dutch Pizza Place account! </h1>

    <p>Heeft u nog geen account? Dan kunt u <a href="/Contact">hier</a> klikken. Dan komt u bij ons contactformulier, waar u ook een account op kan aanmaken.</p>

</div>

<form>
    <div class="blokjes">
     <div class="col-xs-12">
         
            <div class="styled-input wide">
                <input placeholder="Gebruikersnaam" type="text" name="Gebruikersnaam" />
            </div>
     </div>

         <div class="col-xs-12">
            <div class="styled-input wide">
                <input placeholder="Wachtwoord" type="text" name="Wachtwoord" />
            </div>
        </div>
        <div class="col-xs-12">
            <input class="btn-lrg submit-btn" type="submit" value="verstuur" />
        </div>
    </div>
        
</form>

<script type="text/javascript">

        function swapStyle(sheet){
            document.getElementById('mystylesheet').href = sheet
        }

</script>
